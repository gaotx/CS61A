;;; Scheme Recursive Art Contest Entry
;;;
;;; Title: The Eyes of John DeNero
;;;
;;; Description:
;;;    Like these triangles
;;;    Your grades point ever upward
;;;    When you learn from John


(define (draw)
  (speed 0)
  (hideturtle)
  (reset)
  (width 5)
  (arc)
  (leftline)
  (rightline)
  (leftcircle)
  (rightcircle)
  (width 1)
  (leftspiral)
  (rightspiral)
)

(define (arc)
  (forward 60)
  (left 90)
  (pendown)
  (circle 60 180)
  (reset)
)

(define (leftspiral)
  (forward 300)
  (pendown)
  (color "gold")
  (spiral 20 119.5 1 362)
)

(define (rightspiral)
  (right 180)
  (forward 300)
  (left 180)
  (color "blue")
  (pendown)
  (spiral 20 119.5 1 362)
)

(define (spiral dist ang incr segs)
  (if (= 0 segs)
    (reset)
    (begin
      (forward dist)
      (right ang)
      (spiral (+ dist incr) ang incr (- segs 1))
    )
  )
)

(define (rightcircle)
  (forward 60)
  (right 90)
  (glass)
)

(define (leftcircle)
  (left 180)
  (forward 60)
  (right 90)
  (glass)
)

(define (glass)
  (pendown)
  (begin_fill)
  (circle 240)
  (color "light grey")
  (end_fill)
  (color "black")
  (reset)
)

(define (leftline)
  (left 180)
  (forward 60)
  (right 90)
  (circle 240 180)
  (left 160)
  (forward 166)
  (pendown)
  (forward 300)
  (arcdraw)
)

(define (rightline)
  (forward 60)
  (right 90)
  (circle 240 180)
  (right 20)
  (pendown)
  (forward 400)
  (arcdraw)
)

(define (arcdraw)
  (penup)
  (right 90)
  (forward 120)
  (left 90)
  (pendown)
  (circle 60 180)
  (reset)
)

(define (reset)
  (penup)
  (goto 0 0)
  (seth 0)
  (right 180)
  (forward 100)
  (right 90)
  (forward 100)
  (left 180)
)

(draw)
